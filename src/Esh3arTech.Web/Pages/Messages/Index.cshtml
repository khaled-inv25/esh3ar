@page
@using Esh3arTech.Localization
@using Microsoft.Extensions.Localization
@model Esh3arTech.Web.Pages.Messages.IndexModel
@inject IStringLocalizer<Esh3arTechResource> L

@section scripts
{
    <abp-script src="/Pages/Messages/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row class="align-items-center">
            <abp-column size-md="_6">
                <abp-card-title>
                    <i class="fas fa-envelope-open-text me-2"></i> @L["Messages"]
                </abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="RefBtn" text="@L["Btn:Refresh"].Value" icon="sync" button-type="Outline_Primary" size="Small" />
                <abp-button id="UploadFileBtn" text="@L["Btn:ImportExcel"].Value" icon="file-excel" button-type="Outline_Success" size="Small" />
                <abp-button id="SendMsgBtn" text="@L["Btn:SendMessage"].Value" icon="paper-plane" button-type="Primary" size="Small" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" border-style="Borderless" id="MessagesTable" class="nowrap"></abp-table>
    </abp-card-body>
</abp-card>