@using Esh3arTech.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model Esh3arTech.Web.Pages.Dashboard.Components.DashboardArea.DashboardAreaViewComponent.MessagesStatusAreaViewComponentModel
@inject IHtmlLocalizer<Esh3arTechResource> L

<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0 avatar-sm bg-light-primary text-primary rounded-circle p-3">
                        <i class="fas fa-envelope-open-text fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">@L["TotalMessages"]</h6>
                        <h3 class="mb-0 fw-bold">@Model.TotalMessages</h3>
                    </div>
                </div>
                <div class="text-muted small">
                    <span class="text-success fw-medium"><i class="fas fa-arrow-up me-1"></i>@L["AllTime"]</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0 avatar-sm bg-light-info text-info rounded-circle p-3">
                        <i class="fas fa-calendar-alt fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">@L["ThisMonth"]</h6>
                        <h3 class="mb-0 fw-bold">@Model.TotalMessageThisMonth</h3>
                    </div>
                </div>
                <progress class="progress progress-sm w-100" value="10" max="100" style="height: 4px;"></progress>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0 avatar-sm bg-light-warning text-warning rounded-circle p-3">
                        <i class="fas fa-layer-group fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">@L["ThisWeek"]</h6>
                        <h3 class="mb-0 fw-bold">@Model.TotalMessageThisWeek</h3>
                    </div>
                </div>
                <div class="text-muted small">Current Week Cycle</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-white-50 text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">@L["Today"]</h6>
                        <h3 class="mb-0 fw-bold text-white">@Model.TotalMessageToday</h3>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-bolt fa-3x opacity-25"></i>
                    </div>
                </div>
                <div class="mt-3 text-white-50 small">Updated just now</div>
            </div>
        </div>
    </div>
</div>