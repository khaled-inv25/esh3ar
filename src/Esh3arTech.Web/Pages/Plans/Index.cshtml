@page
@using Esh3arTech.Localization
@using Esh3arTech.Web.Pages.Plans
@using Microsoft.Extensions.Localization
@model Esh3arTech.Web.Pages.Plans.IndexModel
@inject IStringLocalizer<Esh3arTechResource> L
@section scripts
{
    <abp-script src="/Pages/Plans/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row class="align-items-center">
            <abp-column size-md="_6">
                <abp-card-title>
                    <i class="fas fa-crown me-2 text-warning"></i> @L["Plans"]
                </abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewPlanBtn" text="@L["Btn:NewPlan"].Value" icon="plus" button-type="Primary" size="Small"></abp-button>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" border-style="Borderless" id="PlanTable" class="nowrap"></abp-table>
    </abp-card-body>
</abp-card>